@model Translator2.Models.TranslatedModel


<h2>Vertaling</h2>
<div class="col-lg-12">
    <div class="row">

        <div class="panel panel-green">
            <div class="panel-heading">
                SLOKKENDRINKEN
            </div>
            <div class="panel-body">
                    <div class="input-group">
                        <label>Slokken zelf te drinken = </label>
                        @Html.LabelFor(u => u.ZelfDrinken, Model.ZelfDrinken)
                    </div>
                    <div class="input-group">
                        <label>Slokken uit te delen = </label>
                        @Html.LabelFor(u => u.Uitdelen, Model.Uitdelen)
                    </div>
            </div>
        </div>
</div>

<div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Vertaalde Zin<br/>
                @Html.LabelFor(u => u.EersteVertaaldeTekst, Model.EersteVertaaldeTekst, new { @id = "EersteVertaaldeTekst"})
            </div>
            <div class="panel-body">
                    <div class="input-group">
                        @Html.LabelFor(u => u.EersteTekst, Model.EersteTekst, new { @id = "EersteTekst" })
                    </div>
                    <p>Vertaald naar</p>
                    <div class="input-group">
                        @Html.LabelFor(u => u.NieuweTekst, Model.NieuweTekst, new { @id = "NieuweTekst"})
                    </div>
            
            </div>
        </div>
</div>

<div class="row">
    <a class="btn btn-success btn-block" href="@Url.Action("Index","Home")" role="button">Nog eens?</a>

</div>
</div>
